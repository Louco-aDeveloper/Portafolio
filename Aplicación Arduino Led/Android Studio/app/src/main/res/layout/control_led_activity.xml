<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/control_led_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".ControlLedActivity">

    <Button
        android:id="@+id/control_led_btn_on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Encender Led"
        android:onClick="ledOn"
        />

    <Button
        android:id="@+id/control_led_btn_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apagar Led"
        android:onClick="ledOff"
        android:layout_below="@id/control_led_btn_on"
        />

</RelativeLayout>